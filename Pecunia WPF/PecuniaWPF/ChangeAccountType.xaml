<Window x:Class="PecuniaWPF.ChangeAccountType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PecuniaWPF"
        mc:Ignorable="d"
        Title="ChangeAccountType" Height="450" Width="800">
    <Grid>
        <Label Content="Account Type" HorizontalAlignment="Left" Margin="24,40,0,0" VerticalAlignment="Top" Width="89" Height="34"/>
        <ComboBox x:Name="txtAccountType"  HorizontalAlignment="Left" Margin="144,40,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="txtAccountType_SelectionChanged">
            <ComboBoxItem x:Name="txtSavings"  Content="Savings" HorizontalAlignment="Left" Width="118.4"/>
            <ComboBoxItem x:Name="txtCurrent"  Content="Current" HorizontalAlignment="Left" Width="118.4"/>
        </ComboBox>
        <Button x:Name ="txtSubmit" Content="Change" HorizontalAlignment="Left" Margin="153,126,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label Content="Account ID" HorizontalAlignment="Left" Margin="24,79,0,0" VerticalAlignment="Top" Width="96"/>
        <TextBox x:Name="txtAccountID" HorizontalAlignment="Left" Height="23" Margin="144,79,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
