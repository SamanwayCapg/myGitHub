<Window x:Class="PecuniaWPF.AccountMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PecuniaWPF"
        mc:Ignorable="d"
        Title="AccountMenu" Height="450" Width="800">
    <Grid>
        <Menu HorizontalAlignment="Left" Height="89" Margin="89,63,0,0" VerticalAlignment="Top" Width="110">
            <MenuItem Name="txtAddAccount" Header="Add Account" Height="24" Width="100" Click="txtAddAccount_Click"/>
            <MenuItem x:Name="txtDeleteAccount" Header="Delete Account" Height="22" Width="100" Click="txtDeleteAccount_Click"/>
            <MenuItem Name="txtUpdateAccount" Header="Update Account" Height="25" Width="100" Click="txtUpdateAccount_Click"/>
            <MenuItem Name="txtSearchAccount" Header="Search Account" Height="25" Width="100" Click="TxtSearchAccount_Click"/>
        </Menu>
    </Grid>
</Window>
