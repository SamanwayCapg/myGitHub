@model Pecunia.Mvc.Models.EmployeeViewModel
@using System.Web.Optimization;

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
    @Scripts.Render("~/scripts/jquery")
    @Scripts.Render("~/scripts/jqueryvalidation")
    @Scripts.Render("~/scripts/bootstrap")
    @*<link href="~/Content/bootstrap.css" rel="stylesheet" />*@
    @Styles.Render("~/styles/bootstrap")
    <style>
        .field-validation-error {
            color: red;
        }
    </style>

    <div>
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
            <a class="navbar-brand" href="#">Add Employee</a>
        </nav>

        @using (Html.BeginForm("Add", "Employees", FormMethod.Post))
        {
            <div class="row mt-5 border border-light">
                <div class="mt-5 col-md-6 mx-auto border-secondary bg-light">
                    <div class="card mb-3 mx-auto">
                        <div class="card-header bg-dark text-white">Fill the details to add an employee..</div>
                        <div class="card-body ">
                            <div class="mt-3 form-group form-row">
                                @Html.LabelFor(temp => temp.EmployeeName, "Employee Name:", new { @class = "col-form-label col-lg-3 " })
                                @Html.TextBoxFor(temp => temp.EmployeeName, new { @class = "form-control col-lg-9" })
                                <div class="col-lg-3 text-nowrap col-form-label">
                                    @Html.ValidationMessageFor(temp => temp.EmployeeName)
                                </div>
                            </div>
                            <div class="mt-4 form-group form-row">
                                @Html.LabelFor(temp => temp.EmployeeEmail, "Employee Email:", new { @class = "col-form-label col-lg-3 " })
                                @Html.TextBoxFor(temp => temp.EmployeeEmail, new { @class = "form-control col-lg-9" })
                                <div class="col-lg-3 text-nowrap col-form-label">
                                    @Html.ValidationMessageFor(temp => temp.EmployeeEmail)
                                </div>
                            </div>
                            <div class="mt-4 form-group form-row">
                                @Html.LabelFor(temp => temp.Mobile, new { @class = "col-form-label col-lg-3 " })
                                @Html.TextBoxFor(temp => temp.Mobile, new { @class = "form-control col-lg-9", @maxlength = "10" })
                                <div class="col-lg-3 text-nowrap col-form-label">
                                    @Html.ValidationMessageFor(temp => temp.Mobile)
                                </div>
                            </div>
                            <div class="mt-4 form-group form-row">
                                @Html.LabelFor(temp => temp.EmployeePassword, "Employee Password:", new { @class = "col-form-label col-lg-3 " })
                                @Html.PasswordFor(temp => temp.EmployeePassword, new { @class = "form-control col-lg-9" })
                                <div class="col-lg-3 text-nowrap col-form-label">
                                    @Html.ValidationMessageFor(temp => temp.EmployeePassword)
                                </div>
                            </div>

                            <div class="mt-4 form-group form-row">
                                @Html.LabelFor(temp => temp.ConfirmPassword, "Confirm Password:", new { @class = "col-form-label col-lg-3 " })
                                @Html.PasswordFor(temp => temp.ConfirmPassword, new { @class = "form-control col-lg-9" })
                                <div class="col-lg-3 text-nowrap col-form-label">
                                    @Html.ValidationMessageFor(temp => temp.ConfirmPassword)
                                </div>
                            </div>
                            <div class="mt-5 border-top text-right pt-2">
                                <a class="btn btn-danger text-white" name="button" value="edit" href="@Url.Action("Index","Employees")">Cancel</a>
                                <button class="btn btn-success text-white" name="button" value="add"> Add</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }

    </div>

