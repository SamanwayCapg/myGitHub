@model PecuniaMVC.Models.AccountViewModel
@using System.Web.Optimization

@{
    Layout = "~/Views/Shared/AccountGroupList.cshtml";
}

<meta name="viewport" content="width=device-width" />

<title>Create</title>
@Scripts.Render("~/scripts/jquery")
@Scripts.Render("~/scripts/jqueryvalidation")
@Scripts.Render("~/scripts/bootstrap")
@Styles.Render("~/styles/bootstrap")



    <div class="container-fluid bg-light">
        <div class="col-md-6 mx-auto pt-3">
            <h3>Create Account</h3>
        </div>


        @using (Html.BeginForm("Create", "Accounts", FormMethod.Post))
        {

            <div class="row pt-5">

                <div class="col-md-6 mx-auto">

                    <div class="form-group form-row">
                        @Html.LabelFor(temp => temp.CustomerID,
                              new { @class="col-form-label col-lg-3" })
                        @Html.DropDownListFor(temp => temp.CustomerID, ViewBag.CustomersList as SelectList,
                            new { @class = "form-control col-lg-9" })
                    </div>

                    <div class="form-group form-row">
                        @Html.LabelFor(temp => temp.AccountType,
                              new { @class="col-form-label col-lg-3" })
                        @Html.DropDownListFor(temp => temp.AccountType, new List<SelectListItem>()
                   {
                       new SelectListItem(){ Text="Savings",Value="Savings"},
                        new SelectListItem(){ Text="Current",Value="Current"},
                   },
                            new { @class = "form-control col-lg-9" })
                    </div>

                    <div class="form-group form-row">
                        @Html.LabelFor(temp => temp.HomeBranch,
                              new { @class="col-form-label col-lg-3" })
                        @Html.DropDownListFor(temp => temp.HomeBranch, new List<SelectListItem>()
                   {
                       new SelectListItem(){ Text="Pune",Value="Pune"},
                        new SelectListItem(){ Text="Mumbai",Value="Mumbai"},
                        new SelectListItem(){ Text="Kolkata",Value="Kolkata"},

                   },
                            new { @class = "form-control col-lg-9" })
                    </div>


                    <div class="border-top text-right pt-2">

                        <button class="btn btn-success">Create</button>
                    </div>

                </div>



            </div>
        }

        <a href="@Url.Action("EditingAccountMenu", "Accounts")">Edit</a>
    </div>
