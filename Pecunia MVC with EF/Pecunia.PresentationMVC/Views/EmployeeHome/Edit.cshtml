@model Pecunia.Mvc.Models.EmployeeHomeModel
@using System.Web.Optimization;

@{
    Layout = "~/Views/Shared/PecuniaLayout.cshtml";
}


    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    @Scripts.Render("~/scripts/jquery")
    @Scripts.Render("~/scripts/jqueryvalidation")
    @Scripts.Render("~/scripts/bootstrap")
    @*<link href="~/Content/bootstrap.css" rel="stylesheet" />*@
    @Styles.Render("~/styles/bootstrap")
    <style>
        .field-validation-error {
            color: red;
        }
    </style>

    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
            <a class="navbar-brand" href="#">Update Details</a>
        </nav>

        @using (Html.BeginForm("Edit", "EmployeeHome", FormMethod.Post))
        {

            <div class="row mt-5 border border-light">
                <div class="mt-5 col-md-6 mx-auto border-secondary bg-light">
                    <div class="card mb-3 mx-auto">
                        <div class="card-header bg-dark text-white">Update Here..</div>
                        <div class="card-body ">
                            <div class="mt-3 form-group form-row">
                                @Html.LabelFor(temp => temp.EmployeeName, new { @class = "col-form-label col-lg-3 " })
                                @Html.TextBoxFor(temp => temp.EmployeeName, new { @class = "form-control col-lg-9" })
                                <div class="col-lg-3 text-nowrap col-form-label">
                                    @Html.ValidationMessageFor(temp => temp.EmployeeName)
                                </div>
                            </div>
                            <div class="mt-4 form-group form-row">
                                @Html.LabelFor(temp => temp.EmployeeEmail, new { @class = "col-form-label col-lg-3 " })
                                @Html.TextBoxFor(temp => temp.EmployeeEmail, new { @class = "form-control col-lg-9" })
                                <div class="col-lg-3 text-nowrap col-form-label">
                                    @Html.ValidationMessageFor(temp => temp.EmployeeEmail)
                                </div>
                            </div>
                            <div class="mt-4 form-group form-row">
                                @Html.LabelFor(temp => temp.Mobile, new { @class = "col-form-label col-lg-3 " })
                                @Html.TextBoxFor(temp => temp.Mobile, new { @class = "form-control col-lg-9", @maxlength = "10" })
                                <div class="col-lg-3 text-nowrap col-form-label">
                                    @Html.ValidationMessageFor(temp => temp.Mobile)
                                </div>
                            </div>
                            <div class="mt-5 border-top text-right pt-2">
                                <a class="btn btn-danger text-white" href="@Url.Action("EmployeeIndex", "EmployeeHome",new { employeeID = Model.EmployeeID}))">Cancel</a>
                                <button class="btn btn-secondary" type="submit" name="button" value="edit">Update</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

