@model List<PecuniaMVC.Models.FixedDepositViewModelDisplay>
@using System.Web.Optimization
@{
    Layout = "~/Views/Shared/AccountGroupList.cshtml";
}

<meta name="viewport" content="width=device-width" />
<title>EditingFixedDepositMenu</title>
@Scripts.Render("~/scripts/jquery")
@Scripts.Render("~/scripts/jqueryvalidation")
@Scripts.Render("~/scripts/bootstrap")
@Styles.Render("~/styles/bootstrap")

<div>
    <h1>	Edit/Delete FixedDeposit </h1>
    <table class="table table-dark">
        <thead>
            <tr>
                <th>Number</th>
                <th>Customer ID</th>
                <th>Account Number</th>
                <th>FD Amount </th>
                <th>Home Branch</th>
                <th>Tenure</th>
            </tr>

        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {

                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model[i].CustomerID</td>
                    <td>@Model[i].AccountNumber</td>
                    <td>@Model[i].FdDeposit</td>
                    <td>@Model[i].HomeBranch</td>
                    <td>@Model[i].Tenure</td>
                    <td> <a href="@Url.Action("EditFixedDeposit", "FixedDeposit",new { id = Model[i].AccountID })">Edit</a></td>
                    <td> <a href="@Url.Action("DeleteFixedDeposit", "FixedDeposit",new { id = Model[i].AccountID })">Delete</a></td>


                </tr>
            }
        </tbody>
    </table>

</div>
